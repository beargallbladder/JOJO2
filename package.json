{
  "name": "gravity-lead-portal",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/backend",
    "packages/frontend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/backend & npm run dev --workspace=packages/frontend",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "dev:frontend": "npm run dev --workspace=packages/frontend",
    "build": "npm run build --workspace=packages/shared && npm run build --workspaces --if-present",
    "seed": "npm run seed --workspace=packages/backend",
    "db:generate": "npm run db:generate --workspace=packages/backend",
    "db:migrate": "npm run db:migrate --workspace=packages/backend"
  }
}
